<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:translationZ="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout style="@style/CardsHolder">

            <androidx.cardview.widget.CardView
                android:id="@+id/patchCardView"
                style="@style/Card.Clickable">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/patchLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:padding="8dp"
                        android:text="@string/main_activity_patch_file"
                        android:textColor="@color/colorCardHeaderText"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_line_height"
                        android:layout_marginTop="@dimen/card_line_margin"
                        android:layout_marginBottom="@dimen/card_line_margin"
                        android:background="@color/colorCardLine" />

                    <TextView
                        android:id="@+id/patchNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:fontFamily="sans-serif-light"
                        android:padding="8dp"
                        android:text="@string/main_activity_tap_to_select"
                        android:textSize="20sp"
                        app:drawableStartCompat="@drawable/ic_folder" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/romCardView"
                style="@style/Card.Clickable">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/romLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:padding="8dp"
                        android:text="@string/main_activity_rom_file"
                        android:textColor="@color/colorCardHeaderText"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_line_height"
                        android:layout_marginTop="@dimen/card_line_margin"
                        android:layout_marginBottom="@dimen/card_line_margin"
                        android:background="@color/colorCardLine" />

                    <TextView
                        android:id="@+id/romNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:fontFamily="sans-serif-light"
                        android:padding="8dp"
                        android:text="@string/main_activity_tap_to_select"
                        android:textSize="20sp"
                        app:drawableStartCompat="@drawable/ic_folder" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/outputCardView"
                style="@style/Card.Clickable">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/outputLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:padding="8dp"
                        android:text="@string/main_activity_output_file"
                        android:textColor="@color/colorCardHeaderText"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_line_height"
                        android:layout_marginTop="@dimen/card_line_margin"
                        android:layout_marginBottom="@dimen/card_line_margin"
                        android:background="@color/colorCardLine" />

                    <TextView
                        android:id="@+id/outputNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:fontFamily="sans-serif-light"
                        android:padding="8dp"
                        android:text="@string/main_activity_tap_to_select_where_to_save_rom"
                        android:textSize="20sp"
                        app:drawableStartCompat="@drawable/ic_folder" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/howToUseAppButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="16dp"
                android:text="@string/main_activity_button_how_to_use_app"
                android:textColor="@color/colorCardHeaderText"
                app:icon="@drawable/ic_book"
                app:iconTint="@color/colorCardHeaderText" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>